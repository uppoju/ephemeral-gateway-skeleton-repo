<wsp:Policy xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy" xmlns:L7p="http://www.layer7tech.com/ws/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:SetVariable>
            <L7p:Expression><![CDATA[2013-04-01]]></L7p:Expression>
            <L7p:DataType variableDataType="dateTime"/>
            <L7p:DateOffsetExpression stringValue=""/>
            <L7p:VariableToSet stringValue="foo1"/>
        </L7p:SetVariable>
        <L7p:ManipulateMultiValuedVariable>
            <L7p:SourceVariableName stringValue="foo1"/>
            <L7p:TargetVariableName stringValue="var"/>
        </L7p:ManipulateMultiValuedVariable>
        <L7p:ManipulateMultiValuedVariable>
            <L7p:Enabled booleanValue="false"/>
            <L7p:SourceVariableName stringValue="foo1"/>
            <L7p:TargetVariableName stringValue="var"/>
        </L7p:ManipulateMultiValuedVariable>
        <L7p:SetVariable>
            <L7p:Expression><![CDATA[1]]></L7p:Expression>
            <L7p:DataType variableDataType="int"/>
            <L7p:VariableToSet stringValue="foo2"/>
        </L7p:SetVariable>
        <L7p:ManipulateMultiValuedVariable>
            <L7p:SourceVariableName stringValue="foo2"/>
            <L7p:TargetVariableName stringValue="var"/>
        </L7p:ManipulateMultiValuedVariable>
        <L7p:Split>
            <L7p:Enabled booleanValue="false"/>
            <L7p:InputVariable stringValue="parameter"/>
            <L7p:OutputVariable stringValue="mparameters"/>
        </L7p:Split>
        <L7p:EncodeDecode>
            <L7p:Enabled booleanValue="false"/>
            <L7p:SourceVariableName stringValue="hex"/>
            <L7p:TargetDataType variableDataType="string"/>
            <L7p:TargetVariableName stringValue="hexencode"/>
            <L7p:TransformType transformType="HEX_ENCODE"/>
        </L7p:EncodeDecode>
        <L7p:JdbcQuery>
            <L7p:ConnectionName stringValue="oracle_19c"/>
            <L7p:ConvertVariablesToStrings booleanValue="false"/>
            <L7p:GenerateXmlResult booleanValue="true"/>
            <L7p:SqlQuery stringValue="FUNC GETUSERBYDATE(${var})"/>
        </L7p:JdbcQuery>
        <L7p:HardcodedResponse>
            <L7p:ResponseBody><![CDATA[${jdbcQuery.xmlResult}]]></L7p:ResponseBody>
            <L7p:ResponseContentType stringValue="text/plain; charset=UTF-8"/>
        </L7p:HardcodedResponse>
    </wsp:All>
</wsp:Policy>
